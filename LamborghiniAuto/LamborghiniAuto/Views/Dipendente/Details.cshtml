@model LamborghiniAuto.Models.Dipendente

@{
    ViewData["Title"] = "Dettagli";
}

<h1 class="text-white">Dettagli</h1>

<div>
    <h4 class="text-white">Dipendente</h4>
    <hr />
    <dl class="row text-white">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.stipendio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.stipendio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.mestiere)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.mestiere)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cognome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cognome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dataNascita)
        </dt>
        <dd class = "col-sm-10">
            @{string data = Model.dataNascita.ToShortDateString();} 
            @Html.DisplayFor(model => data)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Modifica</a> |
    <a asp-action="Index">Ritorna alla lista</a>
</div>

@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Lamborghini</h1>
</div>
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="~/img/CountachLP800.JPG" alt="CountachLP800" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Countach LP 800</h3>
                </div>
            </div>

            <div class="item">
                <img src="~/img/Urus.JPG" alt="Urus" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Urus</h3>
                </div>
            </div>

            <div class="item">
                <img src="~/img/STO.JPG" alt="Huracan STO" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Huracan STO</h3>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

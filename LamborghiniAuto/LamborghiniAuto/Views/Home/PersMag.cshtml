@model Tuple<List<LamborghiniAuto.Models.Cliente>, List<LamborghiniAuto.Models.Auto>, List<LamborghiniAuto.Models.Dipendente>>

@{ ViewData["Title"] = "Personale e Magazzino"; }

<h1>Clienti</h1>

<table class="table text-white">
    <tbody>
        @foreach (var item in Model.Item1) // Clienti
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.cognome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.codFisc)
    </td>
    <td>
        @{ string data = item.dataNascita.ToShortDateString(); }
        @Html.DisplayFor(modelItem => data)
    </td>
</tr>
}
    </tbody>
</table>




<h1>Dipendenti</h1>

<table class="table text-white">
    <tbody>
       @foreach (var item in Model.Item3) // DIpendenti
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cognome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.codFisc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.stipendio)
        </td>
    </tr>
    }
    </tbody>
</table>

<h1>Auto</h1>

<table class="table text-white">
    <tbody>
   @foreach (var item in Model.Item2) // Auto
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.modello)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pezziDisponibili)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PezziVenduti)
        </td>
        <td>
            <a asp-controller="Auto" asp-action="Ordina" asp-route-id="@item.id">Ordina</a>
        </td>
    </tr>
    }
    </tbody>
</table>